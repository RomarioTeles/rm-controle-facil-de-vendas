<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:cardElevation="2dp"
        app:cardCornerRadius="5dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:layout_marginStart="8dp">

    <LinearLayout android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">

        <TextView android:id="@+id/textViewParcela"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1ยบ Parcela"
                android:maxLines="2"
                android:textSize="12sp"
                android:textAllCaps="true"/>

        <LinearLayout android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView android:id="@+id/textViewValor"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:text="R$ 50,55"
                    android:maxLines="2"
                    android:textSize="20sp"
                    android:textAllCaps="true"
                    android:textColor="@android:color/black"/>

            <TextView android:id="@+id/textViewStatus"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="PENDENTE"
                    android:maxLines="2"
                    android:textSize="16sp"
                    android:textAllCaps="true"
                    android:gravity="end"
                    android:textColor="@android:color/holo_red_dark"/>

        </LinearLayout>

        <TextView android:id="@+id/textViewVencimento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Vencimento: 12/12/2019"
                android:maxLines="2"
                android:textSize="12sp"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>