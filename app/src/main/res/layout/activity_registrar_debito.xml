<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".activities.cliente.RegistrarDebitoActivity">


    <include android:id="@+id/registrarDebitoProdutos"
             layout="@layout/content_registrar_debito_produtos"
             android:visibility="gone"/>

    <include android:id="@+id/registrarDebitoCesta"
             layout="@layout/content_registrar_debito_cesta" android:visibility="gone"/>

    <include android:id="@+id/registrarDebitoResumo"
             layout="@layout/content_registrar_debito_resumo" android:visibility="gone" />

    <include android:id="@+id/registrarDebitoAdicionarProduto"
             layout="@layout/content_registrar_debito_adicionar_produto"
             android:visibility="visible"/>

    <include android:id="@+id/registrarDebitoPagamentoTipo"
             android:visibility="gone"
             layout="@layout/content_registrar_debito_pagamento_tipo"/>

    <include android:id="@+id/registrarDebitoPagamentoMeio"
             android:visibility="visible"
             layout="@layout/content_registrar_debito_pagamento_meio"/>

</androidx.constraintlayout.widget.ConstraintLayout>