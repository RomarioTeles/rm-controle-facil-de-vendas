<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".activities.contaPagarReceber.compra_venda_produtos.RegistrarCompraVendaActivity">


    <include android:id="@+id/registrarDebitoProdutos"
             layout="@layout/content_registrar_debito_produtos"
             android:visibility="visible"/>

    <include android:id="@+id/registrarDebitoCesta"
            layout="@layout/content_registrar_debito_cesta"
            android:visibility="gone"/>

    <include android:id="@+id/registrarDebitoAdicionarProduto"
             layout="@layout/content_registrar_debito_adicionar_produto"
             android:visibility="gone"/>

    <include android:id="@+id/registrarDebitoResumo"
            layout="@layout/content_registrar_debito_resumo"
            android:visibility="visible" />

    <include android:id="@+id/registrarDebitoPagamento"
            layout="@layout/content_registrar_debito_pagamento"
            android:visibility="gone"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabOptionPesquisar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:fabSize="mini"
        android:backgroundTint="@color/primaryLightColor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/search_primary" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabOptionFinalizar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:fabSize="mini"
        android:backgroundTint="@color/primaryLightColor"
        android:layout_margin="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/credit_card_multiple" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabOptionCliente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:fabSize="mini"
        android:backgroundTint="@color/primaryLightColor"
        android:layout_margin="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/account_primary_24dp" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabOptionCesta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:fabSize="mini"
        android:backgroundTint="@color/primaryLightColor"
        android:layout_margin="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/basket"
        />

</androidx.constraintlayout.widget.ConstraintLayout>