<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="3dp"
        app:cardElevation="2dp"
        app:cardUseCompatPadding="true">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="8dip"
            android:paddingBottom="8dip">

        <ImageView android:id="@+id/imageViewProduto"
                   android:layout_width="100dip"
                   android:layout_height="100dip"
                   android:layout_gravity="center"
                   app:srcCompat="@drawable/no_image"
                   app:layout_constraintStart_toStartOf="parent"
                   app:layout_constraintTop_toTopOf="parent"/>

        <LinearLayout android:id="@+id/linearLayoutNomeProduto"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="vertical"
                      app:layout_constraintStart_toEndOf="@+id/imageViewProduto"
                      app:layout_constraintTop_toTopOf="parent"
                      android:layout_marginStart="100dp"
                      android:layout_marginEnd="96dp"
                      android:layout_marginTop="8dp">

            <TextView android:id="@+id/textViewNome"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:text="Caderno 10 materias - turma da mônica"
                      android:maxLines="2"
                      android:textSize="20sp"
                      android:textColor="@android:color/black"/>

            <TextView android:id="@+id/textViewCodigo"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="código"
                      android:textSize="18sp"
                      app:layout_constraintTop_toBottomOf="@+id/textViewNome"
                      app:layout_constraintStart_toEndOf="@+id/imageViewProduto"/>

        </LinearLayout>

        <LinearLayout android:id="@+id/linearLayoutPrecoProduto"
                      android:layout_width="wrap_content"
                      android:layout_height="match_parent"
                      android:orientation="vertical"
                      app:layout_constraintEnd_toEndOf="parent"
                      app:layout_constraintTop_toTopOf="parent"
                      android:layout_marginTop="8dp">

            <TextView android:id="@+id/textViewLabelSubtotal"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginEnd="16dp"
                      android:text="preço R$"
                      android:textSize="18sp"/>

            <TextView android:id="@+id/textViewSubtotal"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="10,00"
                      android:layout_marginEnd="16dp"
                      android:textSize="25sp"
                      android:textStyle="bold"
                      android:textColor="@color/primary_light"/>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>