<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="3dp"
        app:cardElevation="2dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:layout_marginEnd="8dp"
        app:cardPreventCornerOverlap="true"
        android:foreground="?android:attr/selectableItemBackgroundBorderless">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <LinearLayout
                android:id="@+id/linearLayoutNomeProduto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

            <ImageView
                    android:id="@+id/imageViewProduto"
                    android:layout_width="100dip"
                    android:layout_height="100dip"
                    android:scaleType="fitXY"
                    android:layout_gravity="center|top"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/no_image" />

            <LinearLayout android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:padding="4dp">

                <TextView
                        android:id="@+id/textView1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLines="2"
                        android:ellipsize="middle"
                        android:textAllCaps="true"
                        android:text="Caderno 10 materias - turma da mÃ´nica"
                        android:textColor="@android:color/black"
                        android:textSize="14sp" />

                <TextView
                        android:id="@+id/textViewCodigo"
                        android:layout_width="48dp"
                        android:layout_height="26dp"
                        android:text="@string/label_codigo"
                        android:textSize="12sp"
                        app:layout_constraintStart_toEndOf="@+id/imageViewProduto"
                        app:layout_constraintTop_toBottomOf="@+id/textView1" />

                <TextView
                        android:id="@+id/textViewSubtotal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="16dp"
                        android:layout_weight="1"
                        android:gravity="start"
                        android:text="10,00"
                        android:textColor="@color/secondaryTextColor"
                        android:textSize="18sp" />

            </LinearLayout>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>